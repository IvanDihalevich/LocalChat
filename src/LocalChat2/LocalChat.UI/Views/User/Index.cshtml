@using LocalChat.Repository.Model

@model IEnumerable<UserListItemModel>

<style>
    body {
        background-color: #f0f5fc; /* Світло-синій фон сторінки */
        font-family: 'Arial', sans-serif;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
        color: #2196f3; /* Яскравий блакитний колір для заголовка */
    }

    .table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: #e3f2fd; /* Светло-блакитний фон таблиці */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

        .table th,
        .table td {
            padding: 15px;
            text-align: left;
        }

        .table thead {
            background-color: #2196f3; /* Яскравий блакитний фон заголовка таблиці */
            color: #fff;
        }

        .table tr:nth-child(even) {
            background-color: #bbdefb; /* Светло-блакитний фон для четних рядків */
        }

        .table tr:hover {
            background-color: #90caf9; /* Темно-светло-блакитний фон для рядків при наведенні */
        }

    .btn-primary {
        background-color: #2196f3; /* Яскравий блакитний колір кнопки */
        color: #fff;
        border: none;
        padding: 15px 0; /* Збільшуємо висоту кнопки, щоб зайняти весь рядок */
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
        width: 100%; /* Займає всю доступну ширину */
        display: block; /* Робимо кнопку блочним елементом, щоб зайняти весь рядок */
        text-align: center; /* Вирівнюємо текст по центру */
    }

        .btn-primary:hover {
            background-color: #1976d2; /* Темніший блакитний колір кнопки при наведенні */
        }

    .btn-warning {
        background-color: #ff9800; /* Оранжевий колір для кнопок "Edit" і "Remove" */
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-warning:hover {
            background-color: #f57c00; /* Темніший оранжевий колір при наведенні */
        }

    .btn-danger {
        background-color: #e91e63; /* Рожевий колір для кнопки "Remove" */
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c2185b; /* Темніший рожевий колір при наведенні */
        }

    .modal-title {
        color: #e91e63; /* Рожевий колір для заголовків модальних вікон */
    }

    .modal-body,
    .modal-footer {
        background-color: #fff; /* Білий фон для тіла і футера модальних вікон */
    }
</style>


<h1>Користувачі</h1>
<a href="/user/create" class="btn btn-primary">Створити</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Email</th>
                <th>Roles</th>
                @* <th>Confirmed</th> *@
            }
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FullName</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>@u.Email</td>

                    <td>@string.Join(", ", u.Roles)</td>
                    @* <td><input class="form-check-input" @(u.IsEmailConfirmed ? "checked" : "") type="checkbox" disabled></td> *@
                    <td>
                        <a href="/user/edit/@u.Id" class="btn btn-warning">Edit</a>
                        <a href="#" data-id="@u.Id" data-email="@u.Email" class="btn btn-danger btn-remove-user">Remove</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

