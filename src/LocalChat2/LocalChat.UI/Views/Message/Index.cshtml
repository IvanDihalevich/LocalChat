@model IEnumerable<LocalChat.Core.Entities.Message>

@{
    ViewData["Title"] = "Чат";
}

<h1>Чат</h1>

@if (Model == null || !Model.Any())
{
    <p>Немає повідомлень для відображення.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Від кого повідомлення</th>
                <th>Час надісланого повідомлення</th>
                <th>Текст</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>
                        @if (message.Sender == null)
                        {
                            @:Невідомо
                        }
                        else
                        {
                            @message.Sender
                        }
                    </td>
                    <td>
                        @if (message.SendTime == null)
                        {
                            @:Невідомо
                        }
                        else
                        {
                            @message.SendTime
                        }
                    </td>
                    <td>
                        @message.Text
                    </td>
                    <td>
                        <!-- Додаткові посилання або дії -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Кнопка для додавання нового повідомлення -->
<div>
    <a class="btn btn-primary" href="@Url.Action("Create", "Message")">Додати повідомлення</a>
</div>
